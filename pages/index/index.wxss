.PersonalCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover; /*规定背景图像的尺寸为扩展拉伸*/
  height: 450rpx;
  display: flex;
  justify-content: center; /*项目位于容器的中心*/
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 400;
  text-shadow: 0 0 3px rgba(0, 0, 3, 0.3);
}

.PersonalCenter-bg .text-df {
  opacity: 0.7;
}

.userInfo {
  position: relative;
  width: 45px;
  height: 45px;
  margin: 15rpx;
  border-radius: 50%;
}
.gender {
  position: relative;
  bottom: 46%;
  left: 8%;
  padding: 4rpx 5rpx;
  height: 30rpx; 
  border-radius: 200rpx;
  font-size: 21rpx;
  color: #fff;
}

.PersonalCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.PersonalCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}
.PersonalCenter-bg .icon-crownfill-n {
  margin-left: 10rpx;
  color: #FFD700;
}
.PersonalCenter-bg .icon-crownfill {
  margin-left: 10rpx;
}
.icon-crownfill-n:before{
  content: "\e776";
}